@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using EDocSys.Web.Areas.Documentation.Models
@model LabAccreditationManualStatusViewModel

<form id="create-form" method="post" asp-controller="LabAccreditationManualStatus" asp-action="OnPostSubmit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <input type="hidden" asp-for="DocumentStatusId" name="DocumentStatusId" class="form-control">
            <input type="hidden" asp-for="LabAccreditationManualId" name="LabAccreditationManualId" class="form-control">            

            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Remarks"]</label>
                <div class="col-md-9">
                    <textarea rows="6" asp-for="Remarks" name="Remarks" class="form-control" required> </textarea>
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                </div>
            </div>
        </div>
    </div>

    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        <button type="submit" class="btn btn-success">Save</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>