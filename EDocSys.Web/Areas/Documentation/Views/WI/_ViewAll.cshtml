@using EDocSys.Web.Areas.Documentation.Models
@model IEnumerable<WIViewModel>
<table id="wiTable" class="table table-striped" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>WI No</th>
            <th>WI Title</th>
            <th>WSCP No</th>
            <th>SOP No</th>
            <th>Company</th>
            <th>Process</th>
            @*@if ((AuthorizationService.AuthorizeAsync(User, Permissions.WIs.Delete)).Result.Succeeded
              || (AuthorizationService.AuthorizeAsync(User, Permissions.WIs.Edit)).Result.Succeeded
              || (AuthorizationService.AuthorizeAsync(User, Permissions.WIs.Preview)).Result.Succeeded)
            {*@
                <th>Actions</th>
            @*}*@
        </tr>
    </thead>
    <tbody>

        @foreach (var wi in Model)
        {
        <tr>
            <td>@wi.WINo</td>
            <td>@wi.Title</td>
            <td>@wi.WSCPNo</td>
            <td>@wi.SOPNo</td>
            <td>@wi.CompanyName</td>
            <td>@wi.ProcessName</td>
            @*@if ((AuthorizationService.AuthorizeAsync(User, Permissions.WIs.Delete)).Result.Succeeded
                  || (AuthorizationService.AuthorizeAsync(User, Permissions.WIs.Edit)).Result.Succeeded
                  || (AuthorizationService.AuthorizeAsync(User, Permissions.WIs.Preview)).Result.Succeeded
                  )
            {*@
                <td text-right">
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Action
                        </button>
                        <div class="dropdown-menu shadow animated--grow-in">
                            @*@if ((AuthorizationService.AuthorizeAsync(User, Permissions.WIs.Edit)).Result.Succeeded)
                            {*@
                                <a href="/documentation/wi/CreateOrEdit?id=@wi.Id" ,"Edit WI")" class="dropdown-item"><i class="fas fa-pencil-alt"></i>  Edit</a>

                            @*}*@
                            @*@if ((AuthorizationService.AuthorizeAsync(User, Permissions.WIs.Preview)).Result.Succeeded)
                            {*@
                                <a href="/documentation/wi/Preview?id=@wi.Id" ,"Edit WI")" class="dropdown-item"><i class="fas fa-eye"></i>  Preview</a>

                            @*}*@
                            @*@if ((AuthorizationService.AuthorizeAsync(User, Permissions.WIs.Delete)).Result.Succeeded)

                            {*@
                                <form id="form_delete_@wi.Id" asp-area="Documentation" asp-controller="WI" method="post" asp-action="OnPostDelete" asp-route-id="@wi.Id" onsubmit="return jQueryModalDelete(this)">
                                    <a href="javascript:$('#form_delete_@wi.Id').submit();" class="dropdown-item"><i class="fas fa-trash-alt"></i>  Delete</a>
                                </form>
                            @*}*@
                        </div>
                    </div>
                </td>
            @*}*@
        </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#wiTable").DataTable();
    });
</script>