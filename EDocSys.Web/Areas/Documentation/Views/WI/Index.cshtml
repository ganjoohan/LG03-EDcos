@{
    ViewData["Title"] = localizer["Work Instruction (WI)"];
    ViewData["Caption"] = localizer["Manage Work Instruction here"];
}
@using EDocSys.Web.Areas.Documentation.Models
@model WIViewModel
<div class="card">
    <div class="col-sm-12" style="padding:20px">
        <a id="reload" class="btn btn-primary text-white">
            <i class="fa fas fa-bolt"></i>
            Reload
        </a>

        <a id="loadallWI" class="btn btn-primary text-white">
            <i class="fa fas fa-bolt"></i>
            Load All WI
        </a>
    </div>
    <div id="viewAll" class="card-body table-responsive">
    </div>
</div>
@section Scripts
{
        <script src="~/js/site.js"></script>
    <script>
        $(document).ready(function () {
            $("#wiTable").DataTable();
            loadData();
            $('#reload').on('click', function () {
                loadData();
            });
            $('#loadallWI').on('click', function () {
                $('#viewAll').load('/documentation/wi/LoadAll');
            });



            
        });
        function loadData() {
            if ('@ViewBag.SOPNo' == '') {
                $('#viewAll').load('/documentation/wi/LoadAll');
            }
            else {
                $('#viewAll').load('/documentation/wi/LoadBySOP/?sopno='+ '@ViewBag.SOPNo');
            }
        }

    </script>
}