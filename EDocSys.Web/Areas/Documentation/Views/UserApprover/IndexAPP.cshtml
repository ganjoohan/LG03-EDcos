@{
    ViewData["Title"] = localizer["User Approver List"];
    ViewData["Caption"] = localizer["Manage User Approver here"];
}
@using EDocSys.Web.Areas.Documentation.Models
@model UserApproverViewModel
<div class="card">
    <div class="col-sm-12" style="padding:20px">
        @*@if ((AuthorizationService.AuthorizeAsync(User, Permissions.Departments.Create)).Result.Succeeded)
        {*@
            <a onclick="jQueryModalGet('/documentation/userapprover/OnGetCreateOrEditAPP','Create Approver')" class="btn bg-success">
                <i class="fa fa-plus-square"></i> Add Approver
            </a>
             <a onclick="jQueryModalGet('/documentation/userapprover/OnGetCreateOrEditAAPP','Add For Role A')" class="btn bg-success">
            <i class="fa fa-plus-square"></i> Add For Role A
        </a>
        @*}*@

        <a id="reload" class="btn btn-primary text-white">
            <i class="fa fas fa-bolt"></i>
            Reload
        </a>
    </div>
    <div id="viewAll" class="card-body table-responsive">
    </div>
</div>
@section Scripts
{
    <script src="~/js/site.js"></script>
    <script>
        $(document).ready(function () {
            $("#userapproverTable").DataTable();
            loadData();
            $('#reload').on('click', function () {
                loadData();
            });
        });
        function loadData() {
            $('#viewAll').load('/documentation/userapprover/LoadAllAPP?apt=@ViewBag.APT');
        }
    </script>
}


