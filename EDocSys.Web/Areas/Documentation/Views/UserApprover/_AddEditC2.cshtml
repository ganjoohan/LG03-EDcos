@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using EDocSys.Web.Areas.Documentation.Models
@model UserApproverViewModel

<form id="create-form" method="post" asp-controller="UserApprover" asp-action="OnPostCreateOrEditC2" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
        <label class="col-md-3 col-form-label">@localizer["Company"]</label>

        <div class="col-md-9">
            <div class="input-group">
                <select name="CompanyId" class="form-control select2bs4" id="UserCompanyId" asp-for="CompanyId" asp-items="@Model.UserCompanies">
                </select>
            </div>
            <span asp-validation-for="CompanyId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-3 col-form-label">@localizer["Department"]</label>

        <div class="col-md-9">
            <div class="input-group">
                <select name="DepartmentId" class="form-control select2bs4" id="DepartmentId" asp-for="DepartmentId" asp-items="@Model.UserDepartments" required="required">
                    <option value="">Select Department</option>
                </select>
            </div>
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
                <label class="col-md-3 col-form-label">Concurred 1</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <select name="UserId" class="form-control select2bs4" id="UserId" asp-for="UserId" asp-items="@Model.UserList" required="required">
                            <option value="">Select User</option>
                        </select>
                    </div>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                </div>
            </div>
        </div>
    </div>

    <input type="hidden" asp-for="ApprovalType" name="ApprovalType" value="C2">

    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        <button type="submit" class="btn btn-success">Save</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>