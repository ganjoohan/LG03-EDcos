@using EDocSys.Web.Areas.Documentation.Models
@model IEnumerable<UserApproverViewModel>

<table id="userapproverTable" class="table table-bordered table-hover" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>Company</th>
            <th>Department</th>
            <th>Procedure</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var userapprover in Model)
        {
            <tr>
                <td>@userapprover.CompanyName</td>
                <td><b>@userapprover.DepartmentName</b></td>
                <td style="text-indent: 20px; ">
                    <i class="far fa-user-circle"></i>
                    @userapprover.EmailAddress</td>
                <td text-right">
                        <div class="btn-group">
                            <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu shadow animated--grow-in">
                                    <a onclick="jQueryModalGet('/documentation/userapprover/OnGetOrEditAddC1?id=@userapprover.Id','Edit Department')" class="dropdown-item"><i class="fas fa-pencil-alt"></i>  Edit</a>

                                    <form id="form_delete_@userapprover.Id" asp-area="Documentation" asp-controller="userapprover" method="post" asp-action="OnPostDeleteC1" asp-route-id="@userapprover.Id" onsubmit="return jQueryModalDelete(this)">
                                        <a href="javascript:$('#form_delete_@userapprover.Id').submit();" class="dropdown-item"><i class="fas fa-trash-alt"></i>  Delete</a>
                                    </form>

                            </div>
                        </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#userapproverTable').DataTable( {
        order: [[1, 'asc'], [0, 'asc']],
        rowGroup: {
            dataSrc: [ 0,1 ]
        },
        columnDefs: [ {
            targets: [ 0,1 ],
            visible: false
        } ]
    } );
    });
</script>