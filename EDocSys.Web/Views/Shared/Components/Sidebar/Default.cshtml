                        <p>@localizer["New Issue"]</p>
                    </a>
                </li>
                 <li class="nav-item">
                    <a is-active-route asp-area="Documentation" asp-controller="Issuance" asp-action="Index" asp-route-docType="edit" class="nav-link">
