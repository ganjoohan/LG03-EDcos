                                <li class="nav-item">
                                    <a is-active-route asp-area="Documentation" asp-controller="Department" asp-action="Index" class="nav-link">
                                        <i class="left fas fa-angle-right"></i>
                                        <p>@localizer["Department"]</p>
                                    </a>
                                </li>
                            </ul>
