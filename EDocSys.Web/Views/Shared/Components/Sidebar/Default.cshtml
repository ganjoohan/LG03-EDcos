@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> localizer
<aside id="sideBar" class="main-sidebar sidebar-dark-primary">
    <a href="/" class="brand-link">
        <img src="~/images/logo-transparent.png" id="brand-logo" alt="logo" class="brand-image"
             style="opacity: .8">
        <span class="brand-text font-weight-light" style="font-size:0.8em!important">EDoc System 1.0</span>
    </a>
