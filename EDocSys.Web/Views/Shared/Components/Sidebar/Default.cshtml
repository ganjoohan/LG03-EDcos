                                    </a>
                                </li>
                            </ul>
                        </li>
                    }*@

                    }
                    @if (User.IsInRole("SuperAdmin") || User.IsInRole("E"))
                    {
                        <li is-active-route asp-area="Documentation" class="nav-item has-treeview">
                            <a is-active-route asp-area="Documentation" class="nav-link">
                                <i class="nav-icon fas fa-gear"></i>
                                <p>
                                    @localizer["Master Setup"]
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                @if (User.IsInRole("SuperAdmin"))
                                {
                                    <li class="nav-item">
                                        <a is-active-route asp-area="Documentation" asp-controller="Company" asp-action="Index" class="nav-link">
                                            @*<i class="far fa-circle nav-icon"></i>*@
                                            <i class="left fas fa-angle-right"></i>
                                            <p>@localizer["Company"]</p>
                                        </a>
                                    </li>
