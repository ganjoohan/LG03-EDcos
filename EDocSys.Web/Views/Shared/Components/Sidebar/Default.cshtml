                    <a is-active-route asp-area="Documentation" asp-controller="LabAccreditationManual" asp-action="Index" class="nav-link">
                        <i class="left fas fa-sticky-note"></i>
                        <p>@localizer["Lab Accreditation Manual"]</p>
                    </a>
                </li>
