                    }

                    @if (User.IsInRole("SuperAdmin") || User.IsInRole("E"))
                    {
                        <li is-active-route asp-area="Documentation" asp-controller="" class="nav-item has-treeview">
                            <a is-active-route asp-area="Documentation" class="nav-link">
                            <i class="nav-icon fas fa-gear"></i>
                            <p>
                                @localizer["Approval Setup"]
